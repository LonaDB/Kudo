        integrity="sha512-Z/def5z5u2aR89OuzYcxmDJ0Bnd5V1cKqBEbvLOiUNWdg9PQeXVvXLI90SE4QOHGlfLqUnDNVAYyZi8UwUTmWQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<style>


</style>
<nav class="navbar">
    <div class="navbar-logo">LonaDB</div>
    <div class="dropdown">
        <a class="btn btn-success dropdown-toggle" style="border-radius: 50px; border-width: 0px;" href="#"
            role="button" data-bs-toggle="dropdown" aria-expanded="false">
            {{username}}
        </a>

        <ul class="dropdown-menu">
            <li><a class="dropdown-item text-danger" href="/logout">Log Out</a></li>
        </ul>
    </div>
</nav>

<div id="wrapper">

    <div class="container ">
        <div class="row row-cols-2">
            <div class="col ">
                <div class="table-margin shadowl">
                    <h3>Tables</h3>
                    <br>
                    {{#if createTablePerm}}
                    <p>Create Table</p>
                    <form action="/command" method="POST">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Name" name="tableCreateName"
                                aria-describedby="basic-addon2">
                            <span class="input-group-text" id="basic-addon2">
                                    <button type="submit" class="btn btn-success" name="command" value="Create Table">Erstellen</button>
                                    </span>
                        </div>
                    </form>
                    <br>
                    {{else}}
                    <p class="text-danger">You are not allowed to create tables</p>
                    {{/if}}
                    {{#each tables}}
                    <form action="/command" , method="POST">
                        <input type="hidden" name="tableName" value="{{this}}">
                        <div>
                            <button type="submit" class="btn btn-success max-btn" name="command" value="View Table"><i class="fa-solid fa-eye"></i> <span style="margin-left: 5px;">{{this}}</span></button>
                            <button type="submit" class="btn btn-danger" name="command" value="Delete Table"><i class="fa-solid fa-trash"></i></button>
                        </div>
                    </form>
                    {{/each}}
                </div>
            </div>
            <div class="col">
                <div class="table-margin shadowl">
                    <h3>User Managment</h3>
                    <br>
                    <p>Create new user</p>
                    {{#if createUserPerm}}

                    <form action="/command" method="POST">
                        <input type="text" name="userCreateName" class="form-control" value=""
                            placeholder="New User's username">
                        <br>
                        <input type="password" name="userCreatePassword" class="form-control" value=""
                            placeholder="New User's password">
                        <br>
                        <div class="d-grid gap-2">
                            <input type="submit" class="btn btn-success" value="Create User" name="command">
                        </div>
                    </form>
                    {{else}}
                    <p class="text-danger">You are not allowed to create users</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>

</div>