<style>


</style>
<nav class="navbar">
    <div class=""><a class="navbar-logo" href="/">LonaDB</a></div>
    <div class="dropdown">
        <a class="btn btn-success dropdown-toggle" style="border-radius: 50px; border-width: 0px;" href="#"
            role="button" data-bs-toggle="dropdown" aria-expanded="false">
            {{username}}
        </a>

        <ul class="dropdown-menu">
            {{#if createUserPerm}}
                <li><a class="dropdown-item" href="/users">Users</a></li>
            {{else}}
                {{#if deleteUserPerm}}
                    <li><a class="dropdown-item" href="/users">Users</a></li>
                {{/if}}
            {{/if}}
            <li><a class="dropdown-item" href="/">Tables</a></li>
            <li><a class="dropdown-item text-danger" href="/logout">Log Out</a></li>
        </ul>
    </div>
</nav>

<div id="wrapper">

    <div class="container">
        <div class="row">
            <div class="col ">
                <div class="table-margin shadowl">
                    <h3>Edit User: {{user}}</h3>
                    <br>
                    <p>Permissions</p>
                    <form action="/command" method="POST">
                        <input type="hidden" name="user" value="{{user}}">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Permission Name" name="permissionName"
                                aria-describedby="basic-addon2" style="margin-right: 15px;">
                            <span class="input-group-text" id="basic-addon2">
                                    <button type="submit" class="btn btn-success" style="margin-right: 10px;" name="command" value="Add Permission">Add</button>
                                    <button type="submit" class="btn btn-danger" name="command" value="Remove Permission">Remove</button>
                                    </span>
                        </div>
                    </form>
                    <br>
                    <center>
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                            <th scope="col">Permission</th>
                            <th scope="col">Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each permissions}}
                    
                            <tr >
                            <td>{{@key}}</td>
                            <td class="table-item-br perm-{{{this}}}">{{{this}}}</td>
                            </tr>
                            {{/each}}
                    </tbody>
                    </table>
                    </center>
                </div>
            </div>
        </div>
    </div>

</div>
